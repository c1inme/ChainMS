<!DOCTYPE html>

<html>

<head>
    <title>@ViewBag.Title</title>

    @RenderSection("scripts", required: false)
    <link href="@Url.Content("~/Areas/Admin/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>

</head>
<body>
    <div id="wrapper">
        <div id="header">

            <div id="logo">
                <h1>
                    <a href="#">Welcome to Admin </a>
                </h1>
                <p>
                    design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a> and Keith Adler
                </p>
                <div id="logindisplay">
                    @Html.Partial("_LogOnPartialAdmin")
                </div>
            </div>

        </div>
        <!-- end #header -->
        <div id="menu">
            <ul>

                <li class="first">@Html.ActionLink("Trang chủ Panel", "Index", "Home")</li>

            </ul>
        </div>
        <!-- end #menu -->
        <div id="page">
            <div id="page-bgtop">
                <div id="page-bgbtm">
                    <div id="content">
                        <div class="post">
                            <div class="post-bgtop">
                                <div class="post-bgbtm">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                        <div style="clear: both;">
                            &nbsp;
                        </div>
                    </div>
                    <!-- end #content -->
                    <div id="sidebar">
                        <ul>
                            <li>
                                <h2>Aliquam tempus</h2>
                                <p>
                                    Mauris vitae nisl nec metus placerat perdiet est. Phasellus dapibus semper urna
                                    ornare consectetuer hendrerit.
                                </p>
                            </li>
                            <li>
                                <h2>User management</h2>
                                <ul>
                                    <li>@Html.ActionLink("Danh sach Users", "Index", "Users")</li>

                                    <li>@Html.ActionLink("Danh sach GrantPermission", "Index", "GrantPermission")</li>
                                    <li>@Html.ActionLink("Danh sach GroupMemberPermission", "Index", "GroupMemberPermission")</li>
                                    <li>@Html.ActionLink("Danh sach GrantPermission", "Index", "GrantPermission")</li>
                                </ul>
                            </li>
                            <li>
                                <h2>News management</h2>
                                <ul>
                                    <li>@Html.ActionLink("Manufacture", "Index", "Manufacture")</li>
                                    <li>@Html.ActionLink("Category", "Index", "MenuCategory", new { codeLang = "vi"},null)</li>
                                    <li>@Html.ActionLink("News", "Index", "News")</li>
                                </ul>
                            </li>
                            <li>
                                <h2>Product</h2>
                                <ul>
                                    <li>@Html.ActionLink("Product Category", "Index", "ProductCategory")</li>
                                    <li>@Html.ActionLink("Products", "Index", "Product")</li>
                                    <li>@Html.ActionLink("Product definition", "Index", "PropertiesDefinition")</li>
                                    <li>@Html.ActionLink("Create gallery", "Index", "Gallery")</li>
                                </ul>
                            </li>
                            <li>
                                <h2>Utility</h2>
                                <ul>
                                    <li>@Html.ActionLink("Language", "Index", "Language")</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- end #sidebar -->
                    <div style="clear: both;">
                        &nbsp;
                    </div>
                </div>
            </div>
        </div>
        <!-- end #page -->
        <div id="footer">
            <p>
                Copyright (c) 2009 Sitename.com. All rights reserved. Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a> and Keith Adler.
            </p>
        </div>
        <!-- end #footer -->
    </div>

</body>
</html>
