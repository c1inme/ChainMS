@model CMS.Entities.ServerObjects.Image
@using CMS.WebMVC;
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css" />
@using (Html.BeginForm("Create", "ImageAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Image</legend>
         


        <div class="editor-label">
            @MvcHtmlString.Create("Hình ảnh")
        </div>
        <div class="editor-field">
              @Html.UploadImageFor(model => model.Picture, "Picture", "Picture")
            @Html.ValidationMessageFor(model => model.FullHdPath)
        </div>
        
        <div class="editor-label">
            @MvcHtmlString.Create("Tên ảnh")
        </div>
        <div class="editor-field">
             @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @MvcHtmlString.Create("Mô tả")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        @Html.HiddenFor(model => model.IdBelong)
        @Html.HiddenFor(model => model.Discriminator)

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    <div>
    @Html.ActionLink("Back to list", "ImageByDiscriminator", "ImageAdmin", new { Discriminator =  Model.Discriminator, IdBelong = Model.IdBelong }, new object())
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@* @Scripts.Render("http://malsup.github.com/jquery.form.js")
@Scripts.Render("~/Scripts/jquery-previewimage.js")*@
}
<script src="http://malsup.github.com/jquery.form.js"></script>
<script src="@Url.Content("~/Scripts/jquery-previewimage.js")" type="text/javascript"></script>
