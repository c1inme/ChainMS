@model CMS.Entities.ServerObjects.Image
@using CMS.WebMVC;
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
@using (Html.BeginForm("Edit", "ImageAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Image</legend>
         <div class="editor-label">
            @Html.LabelFor(model => model.SmallPath)
        </div>
        <div class="editor-field">
            @Html.EditImageFor(model => model.SmallPath, "Picture", "Picture")
            @Html.ValidationMessageFor(model => model.SmallPath)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

       
        @Html.HiddenFor(model => model.IdBelong)
        @Html.HiddenFor(model => model.Discriminator)
        @Html.HiddenFor(model => model.GuidId)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to list", "ImageByDiscriminator", "ImageAdmin", new { Discriminator = Model.Discriminator, IdBelong = Model.IdBelong }, new object())|
</div>
<script src="http://malsup.github.com/jquery.form.js"></script>
<script src="@Url.Content("~/Scripts/jquery-previewimage.js")" type="text/javascript"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
