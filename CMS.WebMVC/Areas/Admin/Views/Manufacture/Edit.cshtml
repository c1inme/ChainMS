@using CMS.WebMVC;
@model CMS.Entities.ServerObjects.Manufacture

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script>
<script src="http://malsup.github.com/jquery.form.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-previewimage.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Manufacture", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Manufacture</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HomePage)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HomePage)
            @Html.ValidationMessageFor(model => model.HomePage)
        </div>

     <div class="editor-label">
            @Html.LabelFor(model => model.IconImage, "Image")
        </div>
        <div class="editor-field">
            @Html.EditImageFor(model => model.IconImage, "Picture", "Picture")
            @Html.ValidationMessageFor(model => model.IconImage)
        </div>

        @Html.HiddenFor(model => model.GuidId)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
