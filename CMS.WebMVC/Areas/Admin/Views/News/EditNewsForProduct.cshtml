@using CMS.WebMVC.Areas.Admin
@using CMS.WebMVC




@model CMS.Entities.ServerObjects.News

@{
    ViewBag.Title = "Create for product";
}

@using (Html.BeginForm("Edit", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>News</legend>
        <div style="clear: both; padding:10px 0px 10px 0">
            @Html.HiddenFor(model => model.Title)
             @Html.HiddenFor(model => model.IdBelong)
             @Html.HiddenFor(model => model.Discriminator)
            <div class="editor-label">
                @Html.LabelFor(model => model.Content)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content)
            </div>
                       
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to list", "Details", Model.Discriminator, new { Discriminator =  Model.Discriminator, IdBelong = Model.IdBelong }, new object())
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

