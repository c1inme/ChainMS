<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @RenderSection("scripts", required: false)
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>CMS Pro</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </div>
    </div>
    <div class="MenuFull">
        <div class="page">
            <div id="menucontainer">
                @{
                    CMS.WCFService.ServicesServer.ServerService service = new CMS.WCFService.ServicesServer.ServerService();
                    string codeLang = (string)ViewBag.codeLang;
                    var news = service.GetCategoryForIndexMenu(codeLang);
                    @Html.Partial("MenuView", news)
                }

            </div>
        </div>
    </div>
    <div class="page">
        <div id="main" >
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
